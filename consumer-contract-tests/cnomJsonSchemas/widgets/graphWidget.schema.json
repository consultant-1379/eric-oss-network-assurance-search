{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cnom.ericsson.com/schemas/widgets/graphWidget.schema.json",
  "title": "Graph widget",
  "description": "For internal use only. A widget that displays information as a graph in the mathematical sense, with nodes and lines between the nodes.",
  "allOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_id": true,
        "title": true,
        "subtitle": true,
        "widgetType": {
          "const": "graph"
        },
        "variables": true,
        "maximizable": true,
        "showWhen": true,
        "placeholder": true,
        "sources": true
      }
    },
    { "$ref": "./widget.schema.json#/definitions/baseWidgetSchema" }
  ]
}
